// Vehicle Edit Modal
#vehicleEditModal.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered
        .modal-content
            .modal-header
                h5.modal-title
                    i.bi.bi-truck.me-2
                    | Change Vehicle
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
            
            .modal-body
                // Transaction info
                .card.mb-3.bg-light
                    .card-body.py-2
                        .row.g-2.small
                            .col-6
                                strong Bill No:
                                .text-muted#modalBillNo3
                            .col-6
                                strong Customer:
                                .text-muted#modalCustomer3
                            .col-12
                                strong Current Vehicle:
                                .text-muted#modalCurrentVehicle
                
                form#vehicleEditForm
                    .mb-3
                        label.form-label(for='newVehicle') Select Vehicle: 
                            span.text-danger *
                        select#newVehicle.form-control(required)
                            option(value='') Select Vehicle...
                        .form-text Choose the correct vehicle for this transaction
                    
                    .mb-3
                        label.form-label(for='vehicleReason') Reason for Change:
                        textarea#vehicleReason.form-control(rows='3' placeholder='Enter reason for vehicle change' required)
                    
                    .alert.alert-info
                        i.bi.bi-info-circle.me-2
                        | This change will update the vehicle assignment for this transaction.
            
            .modal-footer
                button.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
                button#saveVehicleBtn.btn.btn-primary(type='button') 
                    span.spinner-border.spinner-border-sm.me-2(style='display:none')
                    | Save Changes