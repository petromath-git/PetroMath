// Mobile-friendly Odometer Edit Modal
#odometerEditModal.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered
        .modal-content
            .modal-header
                h5.modal-title.fw-bold
                    i.bi.bi-speedometer2.me-2
                    | Edit Odometer Reading
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
            
            .modal-body
                // Transaction info card
                .card.mb-3.bg-light
                    .card-body.py-2
                        .row.g-2
                            .col-6.col-md-4
                                small.text-muted Bill No:
                                .fw-semibold#modalBillNo -
                            .col-6.col-md-4
                                small.text-muted Vehicle:
                                .fw-semibold#modalVehicle -
                            .col-12.col-md-4
                                small.text-muted Customer:
                                .fw-semibold#modalCustomer -
                
                form#odometerEditForm
                    .row.g-3
                        .col-12
                            label.form-label(for='currentOdometer') Current Reading:
                            .input-group
                                input#currentOdometer.form-control(type='text' readonly)
                                span.input-group-text km
                        
                        .col-12
                            label.form-label(for='newOdometer') 
                                | New Reading: 
                                span.text-danger *
                            .input-group
                                input#newOdometer.form-control(type='number' min='0' step='0.01' required placeholder='Enter correct reading')
                                span.input-group-text km
                            .form-text Enter the correct odometer reading
                        
                        .col-12
                            label.form-label(for='odometerReason') Reason for Change:
                            textarea#odometerReason.form-control(rows='2' placeholder='Optional: Why is this being corrected?')
                        
                        .col-12
                            .alert.alert-info.py-2
                                .d-flex.align-items-start
                                    i.bi.bi-info-circle.me-2.mt-1
                                    small This change will be logged and mileage calculations will be updated automatically.
            
            .modal-footer
                .row.g-2.w-100
                    .col-6
                        button.btn.btn-outline-secondary.w-100(type='button' data-dismiss='modal') Cancel
                    .col-6
                        button#saveOdometerBtn.btn.btn-primary.w-100(type='button') 
                            span.spinner-border.spinner-border-sm.me-2(style='display:none')
                            | Save Changes