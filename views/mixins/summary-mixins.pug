//- Add new page: Show rows for each denomination
mixin showDenominationsData(denominationValues)
    each val in denominationValues
        tr
            td
                span= val.label
            td
                span(id='val-denom-' + val.id + '-cnt')

//- Gas sales total
mixin gasSalesTotal()
    span.sub-header Total Sales Amount
        span(id='total-sales')
        div.table-responsive
            table.table.table-sm.table-secondary
                tbody
                    tr.bg-success
                        td
                            span MS Sales
                        td.font-weight-bold
                            span(id='MS_pump_amount')
                    tr.bg-primary
                        td
                            span HSD Sales
                        td.font-weight-bold
                            span(id='HSD_pump_amount')
                    tr.table-warning
                        td
                            span XMS Sales
                        td.font-weight-bold
                            span(id='XMS_pump_amount')

